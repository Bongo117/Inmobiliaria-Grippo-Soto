@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>

@{
    var contrato = ViewBag.Contrato as Inmobiliaria_.Net_Core.Models.Contrato;
    ViewData["Title"] = $"Pagos del Contrato #{contrato?.Id}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted">Inmueble: @contrato?.Inmueble?.Direccion</p>
    </div>
    <div>
        @if (ViewBag.ContratoVigente == true)
        {
            <a asp-action="Crear" asp-route-contratoId="@contrato?.Id" class="btn-custom btn-primary-custom me-2">
                <i class="fas fa-plus"></i> Nuevo Pago
            </a>
        }
        <a asp-controller="Contratos" asp-action="Detalles" asp-route-id="@contrato?.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Contrato
        </a>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-shadcn-container">
                        <table class="table-shadcn">
                            <caption class="table-shadcn-caption">
                                Lista de pagos registrados para este contrato.
                            </caption>
                            <thead class="table-shadcn-header">
                                <tr class="table-shadcn-header-row">
                                    <th class="table-shadcn-head" style="width: 100px;">N° Pago</th>
                                    <th class="table-shadcn-head" style="width: 120px;">Fecha</th>
                                    <th class="table-shadcn-head">Detalle</th>
                                    <th class="table-shadcn-head" style="width: 120px;">Importe</th>
                                    <th class="table-shadcn-head" style="width: 100px;">Estado</th>
                                    <th class="table-shadcn-head text-center" style="width: 200px;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="table-shadcn-body">
                                @foreach (var pago in Model)
                                {
                                    <tr class="table-shadcn-row @(pago.Estado ? "" : "opacity-50")">
                                        <td class="table-shadcn-cell font-medium">@pago.NumeroPago</td>
                                        <td class="table-shadcn-cell">@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                        <td class="table-shadcn-cell">@pago.Detalle</td>
                                        <td class="table-shadcn-cell">$@pago.Importe.ToString("N2")</td>
                                        <td class="table-shadcn-cell">
                                            @if (pago.Estado)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Anulado</span>
                                            }
                                        </td>
                                        <td class="table-shadcn-cell">
                                            <div class="table-actions">
                                                <a asp-action="Detalles" asp-route-id="@pago.Id" 
                                                   class="btn-custom btn-outline-custom btn-sm" title="Ver detalles del pago">
                                                    <i class="fas fa-eye"></i>
                                                    <span class="ms-1">Ver</span>
                                                </a>
                                                @if (pago.Estado)
                                                {
                                                    <a asp-action="Editar" asp-route-id="@pago.Id" 
                                                       class="btn-custom btn-secondary-custom btn-sm" title="Editar pago">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        <span class="ms-1">Editar</span>
                                                    </a>
                                                    @if (User.IsInRole("Administrador"))
                                                    {
                                                        <a asp-action="Anular" asp-route-id="@pago.Id" 
                                                           class="btn-custom btn-outline-danger-custom btn-sm" title="Anular pago">
                                                            <i class="fas fa-ban"></i>
                                                            <span class="ms-1">Anular</span>
                                                        </a>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="table-empty-state">
                        <div class="table-empty-state-icon">
                            <i class="fas fa-file-invoice-dollar fa-3x text-muted"></i>
                        </div>
                        <h5>No hay pagos registrados</h5>
                        <p>Aún no se han registrado pagos para este contrato.</p>
                        @if (ViewBag.ContratoVigente == true)
                        {
                            <a asp-action="Crear" asp-route-contratoId="@contrato?.Id" class="btn-custom btn-primary-custom">
                                <i class="fas fa-plus me-2"></i>
                                Registrar Primer Pago
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Resumen del Contrato</h5>
            </div>
            <div class="card-body">
                @if (contrato != null)
                {
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Inquilino
                            <span class="text-end">@contrato.Inquilino?.Apellido, @contrato.Inquilino?.Nombre</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Período
                            <span class="text-end">@contrato.FechaInicio.ToString("dd/MM/yy") - @contrato.FechaFin.ToString("dd/MM/yy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Monto Mensual
                            <span class="badge bg-primary rounded-pill">$@contrato.MontoMensual.ToString("N2")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Total Pagado
                            <span class="badge bg-success rounded-pill">$@ViewBag.TotalPagos.ToString("N2")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Próximo N° de Pago
                            <span class="badge bg-secondary rounded-pill">@ViewBag.SiguienteNumeroPago</span>
                        </li>
                    </ul>
                }
            </div>
        </div>

        @if (ViewBag.ContratoVigente == true && contrato != null)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-plus-circle"></i> Registrar Nuevo Pago</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CrearDesdeContrato" method="post">
                        <input type="hidden" name="contratoId" value="@contrato?.Id" />
                        <input type="hidden" name="NumeroPago" value="@ViewBag.SiguienteNumeroPago" />
                        <div class="mb-3">
                            <label for="Importe" class="form-label">Importe</label>
                            <input type="number" step="0.01" name="Importe" class="form-control" value="@contrato?.MontoMensual.ToString("F2")" required />
                        </div>
                        <div class="mb-3">
                            <label for="FechaPago" class="form-label">Fecha de Pago</label>
                            <input type="date" name="FechaPago" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                        </div>
                        <div class="mb-3">
                            <label for="Detalle" class="form-label">Detalle</label>
                            <input type="text" name="Detalle" class="form-control" value="Alquiler mensual" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Pago Rápido</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
