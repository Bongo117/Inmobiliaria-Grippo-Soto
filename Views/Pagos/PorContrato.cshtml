@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>

@{
    ViewData["Title"] = "Pagos del Contrato";
    var contrato = ViewBag.Contrato as Inmobiliaria_.Net_Core.Models.Contrato;
    var totalPagos = ViewBag.TotalPagos as decimal? ?? 0;
    var siguienteNumeroPago = ViewBag.SiguienteNumeroPago as int? ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Pagos del Contrato</h2>
        @if (contrato != null)
        {
            <p class="text-muted mb-0">
                <strong>Contrato ID:</strong> @contrato.Id |
                <strong>Inmueble:</strong> @contrato.Inmueble?.Direccion |
                <strong>Inquilino:</strong> @(contrato.Inquilino?.Apellido + ", " + contrato.Inquilino?.Nombre)
            </p>
            <p class="text-muted mb-0">
                <strong>Período:</strong> @contrato.FechaInicio.ToString("dd/MM/yyyy") - @contrato.FechaFin.ToString("dd/MM/yyyy") |
                <strong>Monto Mensual:</strong> $@contrato.MontoMensual.ToString("N2")
            </p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Volver a Lista
        </a>
        @if (contrato != null && (contrato.EsVigente || (contrato.TieneTerminacionAnticipada && contrato.MultaAplicada.HasValue)))
        {
            <a asp-action="Crear" asp-route-contratoId="@(contrato.Id)" class="btn-custom btn-primary-custom">
                <i class="fas fa-plus"></i> Nuevo Pago
            </a>
        }
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Total Pagado</h5>
                <h3>$@totalPagos.ToString("N2")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Próximo N° Pago</h5>
                <h3>@siguienteNumeroPago</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Total Pagos</h5>
                <h3>@(Model?.Count() ?? 0)</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>N° Pago</th>
                            <th>Fecha</th>
                            <th>Importe</th>
                            <th>Estado</th>
                            <th>Detalle</th>
                            <th>Fecha Creación</th>
                            <th width="150">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pago in Model.OrderBy(p => p.NumeroPago))
                        {
                            <tr class="@(pago.Estado ? "" : "table-secondary")">
                                <td><strong>@pago.NumeroPago</strong></td>
                                <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                <td>$@pago.Importe.ToString("N2")</td>
                                <td>
                                    @if (pago.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Anulado</span>
                                        @if (pago.FechaAnulacion.HasValue)
                                        {
                                            <br><small class="text-muted">@pago.FechaAnulacion.Value.ToString("dd/MM/yyyy")</small>
                                        }
                                    }
                                </td>
                                <td>@pago.Detalle</td>
                                <td>@pago.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@pago.Id" 
                                           class="btn btn-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (pago.Estado)
                                        {
                                            <a asp-action="Editar" asp-route-id="@pago.Id" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (User.IsInRole("Administrador"))
                                            {
                                                <a asp-action="Anular" asp-route-id="@pago.Id" 
                                                   class="btn btn-danger btn-sm" title="Anular pago">
                                                    <i class="fas fa-ban"></i>
                                                </a>
                                            }
                                        }
                                        @if (User.IsInRole("Administrador"))
                                        {
                                            <a asp-action="Eliminar" asp-route-id="@pago.Id"
                                               class="btn btn-outline-danger btn-sm" title="Eliminar permanentemente"
                                               onclick="return confirm('Esta acción eliminará permanentemente el pago. No se verá como Anulado, desaparecerá del sistema. ¿Desea continuar?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-money-bill-wave fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay pagos registrados para este contrato</h5>
                <p class="text-muted">Comienza registrando el primer pago</p>
                @if (contrato != null && (contrato.EsVigente || (contrato.TieneTerminacionAnticipada && contrato.MultaAplicada.HasValue)))
                {
                    <a asp-action="Crear" asp-route-contratoId="@(contrato.Id)" class="btn-custom btn-primary-custom">
                        <i class="fas fa-plus"></i> Crear Primer Pago
                    </a>
                }
            </div>
        }
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Registro Rápido de Pago</h5>
        </div>
        <div class="card-body">
            <form asp-action="CrearDesdeContrato" method="post">
                <input type="hidden" name="contratoId" value="@(contrato?.Id)" />
                <div class="row">
                    <div class="col-md-2">
                        <label for="NumeroPago" class="form-label">N° Pago</label>
                        <input type="number" class="form-control" name="NumeroPago" value="@siguienteNumeroPago" required />
                    </div>
                    <div class="col-md-3">
                        <label for="FechaPago" class="form-label">Fecha</label>
                        <input type="date" class="form-control" name="FechaPago" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="col-md-3">
                        <label for="Importe" class="form-label">Importe</label>
                        <input type="number" step="0.01" class="form-control" name="Importe" value="@(contrato?.MontoMensual ?? 0)" required />
                    </div>
                    <div class="col-md-3">
                        <label for="Detalle" class="form-label">Detalle</label>
                        <input type="text" class="form-control" name="Detalle" value="Alquiler mensual" required />
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
