@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>

@{
    ViewData["Title"] = "Lista de Pagos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Pagos</h2>
    <div>
        <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
            <i class="fas fa-plus"></i> Nuevo Pago
        </a>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>N° Pago</th>
                            <th>Fecha</th>
                            <th>Contrato</th>
                            <th>Inquilino</th>
                            <th>Importe</th>
                            <th>Estado</th>
                            <th>Detalle</th>
                            <th width="200">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pago in Model)
                        {
                            <tr class="@(pago.Estado ? "" : "table-secondary")">
                                <td>@pago.NumeroPago</td>
                                <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (pago.Contrato != null)
                                    {
                                        <span>ID: @pago.Contrato.Id</span><br>
                                        <small class="text-muted">@pago.Contrato.Inmueble?.Direccion</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">ID: @pago.ContratoId</span>
                                    }
                                </td>
                                <td>
                                    @if (pago.Contrato?.Inquilino != null)
                                    {
                                        @(pago.Contrato.Inquilino.Apellido + ", " + pago.Contrato.Inquilino.Nombre)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </td>
                                <td>$@pago.Importe.ToString("N2")</td>
                                <td>
                                    @if (pago.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Anulado</span>
                                    }
                                </td>
                                <td>@pago.Detalle</td>
                                <td>
                                    <div class="table-actions">
                                        <a asp-action="Detalles" asp-route-id="@pago.Id" 
                                           class="btn-custom btn-outline-custom btn-sm" title="Ver detalles del pago">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M247.31,124.76c-.35-.79-8.82-19.58-27.65-38.41C194.57,61.26,162.88,48,128,48S61.43,61.26,36.34,86.35C17.51,105.18,9,124,8.69,124.76a8,8,0,0,0,0,6.5c.35.79,8.82,19.57,27.65,38.4C61.43,194.74,93.12,208,128,208s66.57-13.26,91.66-38.34c18.83-18.83,27.3-37.61,27.65-38.4A8,8,0,0,0,247.31,124.76ZM128,192c-30.78,0-57.67-11.19-79.93-33.25A133.47,133.47,0,0,1,25,128,133.33,133.33,0,0,1,48.07,97.25C70.33,75.19,97.22,64,128,64s57.67,11.19,79.93,33.25A133.46,133.46,0,0,1,231.05,128C223.84,141.46,192.43,192,128,192Zm0-112a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32,32,0,0,1,128,160Z"/>
                                            </svg>
                                            <span class="ms-1">Ver</span>
                                        </a>
                                        @if (pago.Estado)
                                        {
                                            <a asp-action="Editar" asp-route-id="@pago.Id" 
                                               class="btn-custom btn-secondary-custom btn-sm" title="Editar pago">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                    <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
                                                </svg>
                                                <span class="ms-1">Editar</span>
                                            </a>
                                            @if (User.IsInRole("Administrador"))
                                            {
                                                <a asp-action="Anular" asp-route-id="@pago.Id" 
                                                   class="btn-custom btn-outline-custom btn-sm" title="Anular pago"
                                                   style="color: #dc2626; border-color: #dc2626;">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                    <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216ZM149.66,93.66a8,8,0,0,1,0,11.32L139.31,115.31l10.35,10.35a8,8,0,0,1-11.32,11.32L128,126.63l-10.34,10.35a8,8,0,0,1-11.32-11.32L116.69,115.31,106.34,105a8,8,0,0,1,11.32-11.32L128,104l10.34-10.34A8,8,0,0,1,149.66,93.66Z"/>
                                                </svg>
                                                <span class="ms-1">Anular</span>
                                            </a>
                                                <a asp-action="Eliminar" asp-route-id="@pago.Id" 
                                                   class="btn btn-danger btn-sm" title="Eliminar pago permanentemente"
                                                   onclick="return confirm('Esta acción eliminará permanentemente el pago. No se verá como Anulado, desaparecerá del sistema. ¿Desea continuar?');">
                                                    <i class="fas fa-trash-alt"></i>
                                                    <span class="ms-1">Eliminar</span>
                                                </a>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-money-bill-wave fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay pagos registrados</h5>
                <p class="text-muted">Comienza registrando el primer pago</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
                    <i class="fas fa-plus"></i> Crear Pago
                </a>
            </div>
        }
    </div>
</div>
