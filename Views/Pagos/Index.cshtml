@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>

@{
    ViewData["Title"] = "Lista de Pagos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Pagos</h2>
    <div>
        <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
            <i class="fas fa-plus"></i> Nuevo Pago
        </a>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>NÂ° Pago</th>
                            <th>Fecha</th>
                            <th>Contrato</th>
                            <th>Inquilino</th>
                            <th>Importe</th>
                            <th>Estado</th>
                            <th>Detalle</th>
                            <th width="200">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pago in Model)
                        {
                            <tr class="@(pago.Estado ? "" : "table-secondary")">
                                <td>@pago.NumeroPago</td>
                                <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (pago.Contrato != null)
                                    {
                                        <span>ID: @pago.Contrato.Id</span><br>
                                        <small class="text-muted">@pago.Contrato.Inmueble?.Direccion</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">ID: @pago.ContratoId</span>
                                    }
                                </td>
                                <td>
                                    @if (pago.Contrato?.Inquilino != null)
                                    {
                                        @(pago.Contrato.Inquilino.Apellido + ", " + pago.Contrato.Inquilino.Nombre)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </td>
                                <td>$@pago.Importe.ToString("N2")</td>
                                <td>
                                    @if (pago.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Anulado</span>
                                    }
                                </td>
                                <td>@pago.Detalle</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@pago.Id" 
                                           class="btn btn-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (pago.Estado)
                                        {
                                            <a asp-action="Editar" asp-route-id="@pago.Id" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Anular" asp-route-id="@pago.Id" 
                                               class="btn btn-danger btn-sm" title="Anular pago">
                                                <i class="fas fa-ban"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-money-bill-wave fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay pagos registrados</h5>
                <p class="text-muted">Comienza registrando el primer pago</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
                    <i class="fas fa-plus"></i> Crear Pago
                </a>
            </div>
        }
    </div>
</div>
