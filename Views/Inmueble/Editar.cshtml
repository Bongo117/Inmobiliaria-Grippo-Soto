@model Inmobiliaria_.Net_Core.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}

<h2>Editar Inmueble</h2>

<form asp-action="Editar" method="post">
    <input asp-for="Id" type="hidden" />
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Editar Datos del Inmueble</h4>
                </div>
                <div class="card-body">
                    
                    <div class="form-group mb-3">
                        <label asp-for="Direccion" class="form-label">Dirección *</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Tipo" class="form-label">Tipo *</label>
                                <select asp-for="Tipo" class="form-control">
                                    <option value="">Seleccione un tipo</option>
                                    <option value="Casa">Casa</option>
                                    <option value="Departamento">Departamento</option>
                                    <option value="Local">Local</option>
                                    <option value="Oficina">Oficina</option>
                                    <option value="Depósito">Depósito</option>
                                    <option value="Terreno">Terreno</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Ambientes" class="form-label">Ambientes *</label>
                                <input asp-for="Ambientes" type="number" class="form-control" min="1" max="20" />
                                <span asp-validation-for="Ambientes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Precio" class="form-label">Precio Mensual *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PropietarioId" class="form-label">Propietario *</label>
                                <select asp-for="PropietarioId" class="form-control">
                                    <option value="">Seleccione un propietario</option>
                                    @if (ViewBag.Propietarios != null)
                                    {
                                        @foreach (var propietario in ViewBag.Propietarios)
                                        {
                                            <option value="@propietario.Id">@propietario.Apellido, @propietario.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="PropietarioId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" />
                            <label asp-for="Estado" class="form-check-label">
                                Inmueble activo
                            </label>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                    <a asp-action="Detalles" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> Ver Detalles
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
