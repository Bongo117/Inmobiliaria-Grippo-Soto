@model IEnumerable<Inmobiliaria_.Net_Core.Models.Inmueble>

@{
    ViewData["Title"] = "Lista de Inmuebles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Inmuebles</h2>
    <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
        <i class="fas fa-plus"></i> Nuevo Inmueble
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Direcci√≥n</th>
                            <th>Tipo</th>
                            <th>Ambientes</th>
                            <th>Precio</th>
                            <th>Propietario</th>
                            <th>Estado</th>
                            <th width="200">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inmueble in Model)
                        {
                            <tr>
                                <td>@inmueble.Id</td>
                                <td>@inmueble.Direccion</td>
                                <td>@inmueble.Tipo</td>
                                <td>@inmueble.Ambientes</td>
                                <td>$@inmueble.Precio.ToString("N2")</td>
                                <td>@(inmueble.Propietario?.Apellido + ", " + inmueble.Propietario?.Nombre ?? "No especificado")</td>
                                <td>
                                    @if (inmueble.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@inmueble.Id" 
                                           class="btn btn-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@inmueble.Id" 
                                           class="btn btn-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@inmueble.Id" 
                                           class="btn btn-danger btn-sm" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-building fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay inmuebles registrados</h5>
                <p class="text-muted">Comienza creando tu primer inmueble</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
                    <i class="fas fa-plus"></i> Crear Inmueble
                </a>
            </div>
        }
    </div>
</div>
