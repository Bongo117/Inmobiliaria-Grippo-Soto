@model Inmobiliaria_.Net_Core.Models.Inmueble

@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Detalles del Inmueble</h2>
    <div>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-building"></i> Información del Inmueble</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID:</label>
                            <p class="form-control-plaintext">@Model.Id</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Estado:</label>
                            <p class="form-control-plaintext">
                                @if (Model.Estado)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Dirección:</label>
                    <p class="form-control-plaintext">@Model.Direccion</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tipo:</label>
                            <p class="form-control-plaintext">@Model.Tipo</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ambientes:</label>
                            <p class="form-control-plaintext">@Model.Ambientes</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Precio Mensual:</label>
                    <p class="form-control-plaintext">
                        <span class="h5 text-success">$@Model.Precio.ToString("N2")</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-user"></i> Información del Propietario</h4>
            </div>
            <div class="card-body">
                @if (Model.Propietario != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID Propietario:</label>
                                <p class="form-control-plaintext">@Model.Propietario.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">DNI:</label>
                                <p class="form-control-plaintext">@Model.Propietario.Dni</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre Completo:</label>
                        <p class="form-control-plaintext">@Model.Propietario.Apellido, @Model.Propietario.Nombre</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Propietario.Email))
                                    {
                                        <a href="mailto:@Model.Propietario.Email">@Model.Propietario.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Teléfono:</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Propietario.Telefono))
                                    {
                                        <a href="tel:@Model.Propietario.Telefono">@Model.Propietario.Telefono</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Domicilio:</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Propietario.Domicilio))
                            {
                                @Model.Propietario.Domicilio
                            }
                            else
                            {
                                <span class="text-muted">No especificado</span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        No se encontró información del propietario.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="d-flex flex-wrap gap-2">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn-custom btn-secondary-custom">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
            </svg>
            <span class="ms-2">Editar Inmueble</span>
        </a>
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn-custom btn-outline-custom" 
               style="color: #dc2626; border-color: #dc2626;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
            </svg>
            <span class="ms-2">Eliminar Inmueble</span>
        </a>
        }
        <a asp-controller="Contratos" asp-action="PorInmueble" asp-route-inmuebleId="@Model.Id" class="btn btn-outline-primary">
            <i class="fas fa-file-contract"></i> Ver Contratos
        </a>
        <a asp-controller="Inmueble" asp-action="LibresEntreFechas" class="btn btn-outline-primary">
            <i class="fas fa-calendar-check"></i> Libres entre fechas
        </a>
        <a asp-action="Index" class="btn-custom btn-ghost-custom">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                <path d="M224,128a8,8,0,0,1-8,8H59.31l58.35,58.34a8,8,0,0,1-11.32,11.32l-72-72a8,8,0,0,1,0-11.32l72-72a8,8,0,0,1,11.32,11.32L59.31,120H216A8,8,0,0,1,224,128Z"/>
            </svg>
            <span class="ms-2">Volver a la Lista</span>
        </a>
    </div>
</div>
