@model Inmobiliaria_.Net_Core.Models.Inmueble

@{
    ViewData["Title"] = "Crear Inmueble";
}

<h2>Crear Nuevo Inmueble</h2>

<form asp-action="Crear" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Datos del Inmueble</h4>
                </div>
                <div class="card-body">
                    
                    <div class="form-group mb-3">
                        <label asp-for="Direccion" class="form-label">Dirección *</label>
                        <input asp-for="Direccion" class="form-control" placeholder="Ingrese la dirección completa" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TipoInmuebleId" class="form-label">Tipo de Inmueble</label>
                                <select asp-for="TipoInmuebleId" class="form-control">
                                    <option value="">Seleccione un tipo</option>
                                    @if (ViewBag.TiposInmuebles != null)
                                    {
                                        @foreach (var tipo in ViewBag.TiposInmuebles)
                                        {
                                            <option value="@tipo.Id" data-uso="@tipo.UsoPermitido" data-comercial="@tipo.EsComercial">
                                                @tipo.Nombre - @tipo.UsoPermitido
                                            </option>
                                        }
                                    }
                                </select>
                                <small class="form-text text-muted">Seleccione el tipo específico del inmueble</small>
                                <span asp-validation-for="TipoInmuebleId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Tipo" class="form-label">Tipo (Texto) *</label>
                                <input asp-for="Tipo" class="form-control" placeholder="Ej: Casa, Departamento, Local" />
                                <small class="form-text text-muted">Descripción libre del tipo (por compatibilidad)</small>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Ambientes" class="form-label">Ambientes *</label>
                                <input asp-for="Ambientes" type="number" class="form-control" min="1" max="20" placeholder="Cantidad de ambientes" />
                                <span asp-validation-for="Ambientes" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Información del tipo seleccionado -->
                            <div id="tipoInfo" class="alert alert-info" style="display: none;">
                                <small>
                                    <strong>Información del tipo:</strong>
                                    <div id="tipoDescripcion"></div>
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Precio" class="form-label">Precio Mensual *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PropietarioId" class="form-label">Propietario *</label>
                                <select asp-for="PropietarioId" class="form-control">
                                    <option value="">Seleccione un propietario</option>
                                    @if (ViewBag.Propietarios != null)
                                    {
                                        @foreach (var propietario in ViewBag.Propietarios)
                                        {
                                            <option value="@propietario.Id">@propietario.Apellido, @propietario.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="PropietarioId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Estado" class="form-check-label">
                                Inmueble activo
                            </label>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#TipoInmuebleId').change(function() {
                var selectedOption = $(this).find('option:selected');
                var tipoNombre = selectedOption.text().split(' - ')[0].trim();
                var uso = selectedOption.data('uso');
                var esComercial = selectedOption.data('comercial');
                
                if (tipoNombre && tipoNombre !== 'Seleccione un tipo') {
                    // Autocompletar el campo Tipo con el nombre del tipo seleccionado
                    $('#Tipo').val(tipoNombre);
                    
                    // Mostrar información del tipo
                    var info = 'Uso: ' + uso + (esComercial ? ' (Comercial)' : ' (No comercial)');
                    $('#tipoDescripcion').text(info);
                    $('#tipoInfo').show();
                } else {
                    $('#Tipo').val('');
                    $('#tipoInfo').hide();
                }
            });
        });
    </script>
}
