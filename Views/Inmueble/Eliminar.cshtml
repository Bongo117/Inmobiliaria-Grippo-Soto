@model Inmobiliaria_.Net_Core.Models.Inmueble

@{
    ViewData["Title"] = "Eliminar Inmueble";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger">Eliminar Inmueble</h2>
</div>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> ¿Está seguro que desea eliminar este inmueble?
    </h4>
    <p>Esta acción marcará al inmueble como inactivo. Los datos no se eliminarán permanentemente.</p>
    <p><strong>Nota:</strong> No se puede eliminar un inmueble que tenga contratos vigentes.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-building"></i> Información del Inmueble a Eliminar</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID:</label>
                            <p class="form-control-plaintext">@Model.Id</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Estado:</label>
                            <p class="form-control-plaintext">
                                @if (Model.Estado)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Dirección:</label>
                    <p class="form-control-plaintext">@Model.Direccion</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tipo:</label>
                            <p class="form-control-plaintext">@Model.Tipo</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ambientes:</label>
                            <p class="form-control-plaintext">@Model.Ambientes</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Precio Mensual:</label>
                    <p class="form-control-plaintext">
                        <span class="h5 text-success">$@Model.Precio.ToString("N2")</span>
                    </p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Propietario:</label>
                    <p class="form-control-plaintext">
                        @if (Model.Propietario != null)
                        {
                            <span>@Model.Propietario.Apellido @Model.Propietario.Nombre</span>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }

                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Eliminar" method="post" style="display: inline;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"
            onclick="return confirm('¿Está completamente seguro que desea eliminar este inmueble?')">
            <i class="fas fa-trash"></i> Confirmar Eliminación
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Cancelar
    </a>
    <a asp-action="Detalles" asp-route-id="@Model.Id" class="btn btn-info">
        <i class="fas fa-eye"></i> Ver Detalles
    </a>
</div>
