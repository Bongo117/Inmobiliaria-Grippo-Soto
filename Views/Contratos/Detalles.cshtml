@model Inmobiliaria_.Net_Core.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Detalles del Contrato</h2>
    <div>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-file-contract"></i> Información del Contrato</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID:</label>
                            <p class="form-control-plaintext">@Model.Id</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Estado:</label>
                            <p class="form-control-plaintext">
                                @if (Model.TieneTerminacionAnticipada)
                                {
                                    <span class="badge bg-danger">Terminado Anticipadamente</span>
                                }
                                else if (Model.EsVigente)
                                {
                                    <span class="badge bg-success">Vigente</span>
                                }
                                else if (Model.FechaFin < DateTime.Today)
                                {
                                    <span class="badge bg-secondary">Vencido</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Futuro</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de Inicio:</label>
                            <p class="form-control-plaintext">@Model.FechaInicio.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de Finalización:</label>
                            <p class="form-control-plaintext">@Model.FechaFin.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Duración (días):</label>
                            <p class="form-control-plaintext">@Model.DuracionDias días</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Duración (meses):</label>
                            <p class="form-control-plaintext">@Model.DuracionMeses meses</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Monto Mensual:</label>
                    <p class="form-control-plaintext">
                        <span class="h5 text-success">$@Model.MontoMensual.ToString("N2")</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.TieneTerminacionAnticipada)
{
    <div class="row mt-3">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle"></i> Terminación Anticipada</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Fecha de Terminación:</label>
                                <p class="form-control-plaintext">@Model.FechaTerminacionAnticipada?.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Porcentaje de Tiempo Transcurrido:</label>
                                <p class="form-control-plaintext">
                                    <span class="badge badge-@(Model.PorcentajeTiempoTranscurrido < 50 ? "danger" : "warning")">
                                        @Model.PorcentajeTiempoTranscurrido.ToString("F1")%
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Motivo de Terminación:</label>
                                <p class="form-control-plaintext">@Model.MotivoTerminacion</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Multa Aplicada:</label>
                                <p class="form-control-plaintext">
                                    <span class="h5 text-danger">$@Model.MultaAplicada?.ToString("N2")</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Fecha de Aplicación de Multa:</label>
                                <p class="form-control-plaintext">@Model.FechaAplicacionMulta?.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Meses de Multa:</label>
                                <p class="form-control-plaintext">
                                    <span class="badge badge-info">
                                        @(Model.PorcentajeTiempoTranscurrido < 50 ? "2 meses" : "1 mes")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mt-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-user"></i> Información del Inquilino</h4>
            </div>
            <div class="card-body">
                @if (Model.Inquilino != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID Inquilino:</label>
                                <p class="form-control-plaintext">@Model.Inquilino.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">DNI:</label>
                                <p class="form-control-plaintext">@Model.Inquilino.Dni</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre Completo:</label>
                        <p class="form-control-plaintext">
                            @(Model.Inquilino.Apellido + ", " + Model.Inquilino.Nombre)
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Inquilino.Email))
                                    {
                                        <a href="mailto:@Model.Inquilino.Email">@Model.Inquilino.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Teléfono:</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Inquilino.Telefono))
                                    {
                                        <a href="tel:@Model.Inquilino.Telefono">@Model.Inquilino.Telefono</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        No se encontró información del inquilino.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-building"></i> Información del Inmueble</h4>
            </div>
            <div class="card-body">
                @if (Model.Inmueble != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID Inmueble:</label>
                                <p class="form-control-plaintext">@Model.Inmueble.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tipo:</label>
                                <p class="form-control-plaintext">@Model.Inmueble.Tipo</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Dirección:</label>
                        <p class="form-control-plaintext">@Model.Inmueble.Direccion</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ambientes:</label>
                                <p class="form-control-plaintext">@Model.Inmueble.Ambientes</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Precio del Inmueble:</label>
                                <p class="form-control-plaintext">$@Model.Inmueble.Precio.ToString("N2")</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Propietario:</label>
                        <p class="form-control-plaintext">
                            @if (Model.Inmueble.Propietario != null)
                            {
                                @(Model.Inmueble.Propietario.Apellido + ", " + Model.Inmueble.Propietario.Nombre)
                            }
                            else
                            {
                                <span class="text-muted">No especificado</span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        No se encontró información del inmueble.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="d-flex flex-wrap gap-2">
        @if (!Model.TieneTerminacionAnticipada)
        {
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn-custom btn-secondary-custom">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                    <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
                </svg>
                <span class="ms-2">Editar Contrato</span>
            </a>
            @if (Model.EsVigente)
            {
                <a asp-action="TerminarAnticipadamente" asp-route-id="@Model.Id" class="btn-custom btn-outline-custom" 
                   style="color: #dc2626; border-color: #dc2626;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                        <path d="M236.8,188.09,149.35,36.22h0a24.76,24.76,0,0,0-42.7,0L19.2,188.09a23.51,23.51,0,0,0,0,23.72A24.35,24.35,0,0,0,40.55,224h174.9a24.35,24.35,0,0,0,21.33-12.19A23.51,23.51,0,0,0,236.8,188.09ZM120,104a8,8,0,0,1,16,0v40a8,8,0,0,1-16,0Zm8,88a12,12,0,1,1,12-12A12,12,0,0,1,128,192Z"/>
                    </svg>
                    <span class="ms-2">Terminar Anticipadamente</span>
                </a>
            }
        }
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn-custom btn-outline-custom" 
               style="color: #dc2626; border-color: #dc2626;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
            </svg>
            <span class="ms-2">Eliminar Contrato</span>
        </a>
        }
        <a asp-action="Index" class="btn-custom btn-ghost-custom">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                <path d="M224,128a8,8,0,0,1-8,8H59.31l58.35,58.34a8,8,0,0,1-11.32,11.32l-72-72a8,8,0,0,1,0-11.32l72-72a8,8,0,0,1,11.32,11.32L59.31,120H216A8,8,0,0,1,224,128Z"/>
            </svg>
            <span class="ms-2">Volver a la Lista</span>
        </a>
    </div>
</div>
