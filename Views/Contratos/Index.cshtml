@model IEnumerable<Inmobiliaria_.Net_Core.Models.Contrato>

@{
    ViewData["Title"] = ViewBag.Titulo ?? "Lista de Contratos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center gap-3">
        <h2>@ViewData["Title"]</h2>
        @if (ViewBag.Titulo != null)
        {
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary" title="Volver a la lista completa">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        }
    </div>
    <div class="d-flex gap-2 align-items-center">
        @if (ViewBag.Titulo == null)
        {
            <a asp-action="VigentesEntreFechas" class="btn-custom btn-info-custom">
                <i class="fas fa-calendar-range"></i> Vigentes entre Fechas
            </a>
            <div class="btn-group">
                <button type="button" class="btn btn-outline-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-hourglass-end"></i> Vencen Próximamente
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-action="FinalizanEn" asp-route-dias="30">En 30 días</a></li>
                    <li><a class="dropdown-item" asp-action="FinalizanEn" asp-route-dias="60">En 60 días</a></li>
                    <li><a class="dropdown-item" asp-action="FinalizanEn" asp-route-dias="90">En 90 días</a></li>
                </ul>
            </div>
        }
        <a asp-action="Crear" class="btn-custom btn-primary-custom">
            <i class="fas fa-plus"></i> Nuevo Contrato
        </a>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-shadcn-container">
                <table class="table-shadcn">
                    <caption class="table-shadcn-caption">
                        Lista de contratos registrados en el sistema.
                    </caption>
                    <thead class="table-shadcn-header">
                        <tr class="table-shadcn-header-row">
                            <th class="table-shadcn-head" style="width: 80px;">Id</th>
                            <th class="table-shadcn-head">Inmueble</th>
                            <th class="table-shadcn-head">Inquilino</th>
                            <th class="table-shadcn-head" style="width: 120px;">Fecha Inicio</th>
                            <th class="table-shadcn-head" style="width: 120px;">Fecha Fin</th>
                            <th class="table-shadcn-head" style="width: 120px;">Monto</th>
                            <th class="table-shadcn-head" style="width: 150px;">Estado</th>
                            <th class="table-shadcn-head text-center" style="width: 200px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="table-shadcn-body">
                        @foreach (var contrato in Model)
                        {
                            <tr class="table-shadcn-row">
                                <td class="table-shadcn-cell font-medium">@contrato.Id</td>
                                <td class="table-shadcn-cell">@contrato.Inmueble?.Direccion</td>
                                <td class="table-shadcn-cell">@(contrato.Inquilino?.Apellido + ", " + contrato.Inquilino?.Nombre ?? "No especificado")</td>
                                <td class="table-shadcn-cell">@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td class="table-shadcn-cell">@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                                <td class="table-shadcn-cell">$@contrato.MontoMensual.ToString("N2")</td>
                                <td class="table-shadcn-cell">
                                    @if (contrato.TieneTerminacionAnticipada)
                                    {
                                        <span class="badge bg-danger">Terminado Anticipadamente</span>
                                    }
                                    else if (contrato.EsVigente)
                                    {
                                        <span class="badge bg-success">Vigente</span>
                                    }
                                    else if (contrato.FechaFin < DateTime.Today)
                                    {
                                        <span class="badge bg-secondary">Vencido</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Futuro</span>
                                    }
                                </td>
                                <td class="table-shadcn-cell">
                                    <div class="table-actions">
                                        <a asp-action="Detalles" asp-route-id="@contrato.Id" 
                                           class="btn-custom btn-outline-custom btn-sm" title="Ver detalles del contrato">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M247.31,124.76c-.35-.79-8.82-19.58-27.65-38.41C194.57,61.26,162.88,48,128,48S61.43,61.26,36.34,86.35C17.51,105.18,9,124,8.69,124.76a8,8,0,0,0,0,6.5c.35.79,8.82,19.57,27.65,38.4C61.43,194.74,93.12,208,128,208s66.57-13.26,91.66-38.34c18.83-18.83,27.3-37.61,27.65-38.4A8,8,0,0,0,247.31,124.76ZM128,192c-30.78,0-57.67-11.19-79.93-33.25A133.47,133.47,0,0,1,25,128,133.33,133.33,0,0,1,48.07,97.25C70.33,75.19,97.22,64,128,64s57.67,11.19,79.93,33.25A133.46,133.46,0,0,1,231.05,128C223.84,141.46,192.43,192,128,192Zm0-112a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32,32,0,0,1,128,160Z"/>
                                            </svg>
                                            <span class="ms-1">Ver</span>
                                        </a>
                                        @if (!contrato.TieneTerminacionAnticipada)
                                        {
                                            <a asp-action="Editar" asp-route-id="@contrato.Id" 
                                               class="btn-custom btn-secondary-custom btn-sm" title="Editar contrato">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                    <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
                                                </svg>
                                                <span class="ms-1">Editar</span>
                                            </a>
                                            @if (contrato.EsVigente)
                                            {
                                                <a asp-action="TerminarAnticipadamente" asp-route-id="@contrato.Id" 
                                                   class="btn-custom btn-outline-danger-custom btn-sm" title="Terminar contrato anticipadamente">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                        <path d="M236.8,188.09,149.35,36.22h0a24.76,24.76,0,0,0-42.7,0L19.2,188.09a23.51,23.51,0,0,0,0,23.72A24.35,24.35,0,0,0,40.55,224h174.9a24.35,24.35,0,0,0,21.33-12.19A23.51,23.51,0,0,0,236.8,188.09ZM120,104a8,8,0,0,1,16,0v40a8,8,0,0,1-16,0Zm8,88a12,12,0,1,1,12-12A12,12,0,0,1,128,192Z"/>
                                                    </svg>
                                                    <span class="ms-1">Terminar</span>
                                                </a>
                                            }
                                        }
                                        @if (User.IsInRole("Administrador"))
                                        {
                                            <a asp-action="Eliminar" asp-route-id="@contrato.Id" 
                                               class="btn-custom btn-outline-danger-custom btn-sm" title="Eliminar contrato">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
                                            </svg>
                                            <span class="ms-1">Eliminar</span>
                                        </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="table-empty-state">
                <div class="table-empty-state-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 256 256">
                        <path d="M224,48H32A16,16,0,0,0,16,64V192a16,16,0,0,0,16,16H224a16,16,0,0,0,16-16V64A16,16,0,0,0,224,48ZM32,64H224V80H32ZM32,192V96H224v96Z"/>
                    </svg>
                </div>
                <h5>No hay contratos registrados</h5>
                <p>Comienza creando tu primer contrato para gestionar las propiedades</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom">
                    <span class="sidebar-icon me-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M224,128a8,8,0,0,1-8,8H136v80a8,8,0,0,1-16,0V136H40a8,8,0,0,1,0-16h80V40a8,8,0,0,1,16,0v80h80A8,8,0,0,1,224,128Z"/>
                        </svg>
                    </span>
                    Crear Contrato
                </a>
            </div>
        }
    </div>
</div>
