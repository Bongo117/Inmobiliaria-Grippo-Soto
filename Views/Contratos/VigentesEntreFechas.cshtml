@{
    ViewData["Title"] = "Contratos vigentes entre fechas";
    var resultados = ViewBag.Resultados as IEnumerable<Inmobiliaria_.Net_Core.Models.Contrato>;
    DateTime? fechaDesde = ViewBag.FechaDesde as DateTime?;
    DateTime? fechaHasta = ViewBag.FechaHasta as DateTime?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Contratos vigentes entre fechas</h2>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="VigentesEntreFechasPost" method="post" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Fecha desde</label>
                <input type="date" name="fechaDesde" class="form-control" value="@(fechaDesde?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" required />
            </div>
            <div class="col-md-4">
                <label class="form-label">Fecha hasta</label>
                <input type="date" name="fechaHasta" class="form-control" value="@(fechaHasta?.ToString("yyyy-MM-dd") ?? DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd"))" required />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Buscar</button>
            </div>
        </form>
    </div>
</div>

@if (resultados != null)
{
    <div class="card">
        <div class="card-body">
            @if (resultados.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Inmueble</th>
                                <th>Inquilino</th>
                                <th>Propietario</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Monto</th>
                                <th width="150">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contrato in resultados)
                            {
                                <tr>
                                    <td>@contrato.Id</td>
                                    <td>
                                        <strong>@contrato.Inmueble?.Direccion</strong>
                                        <br>
                                        <small class="text-muted">@contrato.Inmueble?.Tipo - @contrato.Inmueble?.Ambientes amb.</small>
                                    </td>
                                    <td>
                                        <strong>@(contrato.Inquilino?.Apellido + ", " + contrato.Inquilino?.Nombre ?? "No especificado")</strong>
                                        @if (!string.IsNullOrEmpty(contrato.Inquilino?.Email))
                                        {
                                            <br><small class="text-muted">@contrato.Inquilino.Email</small>
                                        }
                                    </td>
                                    <td>
                                        <strong>@(contrato.Inmueble?.Propietario?.Apellido + ", " + contrato.Inmueble?.Propietario?.Nombre ?? "No especificado")</strong>
                                        @if (!string.IsNullOrEmpty(contrato.Inmueble?.Propietario?.Email))
                                        {
                                            <br><small class="text-muted">@contrato.Inmueble.Propietario.Email</small>
                                        }
                                    </td>
                                    <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                                    <td><strong>$@contrato.MontoMensual.ToString("N2")</strong></td>
                                    <td>
                                        <a asp-action="Detalles" asp-route-id="@contrato.Id" class="btn btn-outline-info btn-sm">Ver</a>
                                        <a asp-action="Editar" asp-route-id="@contrato.Id" class="btn btn-outline-warning btn-sm">Editar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-info-circle text-muted"></i> No se encontraron contratos vigentes en el rango indicado.
                </div>
            }
        </div>
    </div>
}
