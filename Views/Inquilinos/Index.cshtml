@model IEnumerable<Inmobiliaria_.Net_Core.Models.Inquilino>

@{
    ViewData["Title"] = "Lista de Inquilinos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Inquilinos</h2>
    <a asp-action="Crear" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Inquilino
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>DNI</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Tel√©fono</th>
                            <th width="200">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inquilino in Model)
                        {
                            <tr>
                                <td>@inquilino.Id</td>
                                <td>@inquilino.Dni</td>
                                <td>@inquilino.Apellido, @inquilino.Nombre</td>
                                <td>@(inquilino.Email ?? "No especificado")</td>
                                <td>@(inquilino.Telefono ?? "No especificado")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@inquilino.Id" 
                                           class="btn btn-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@inquilino.Id" 
                                           class="btn btn-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@inquilino.Id" 
                                           class="btn btn-danger btn-sm" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay inquilinos registrados</h5>
                <p class="text-muted">Comienza creando tu primer inquilino</p>
                <a asp-action="Crear" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Crear Inquilino
                </a>
            </div>
        }
    </div>
</div>