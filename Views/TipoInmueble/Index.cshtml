@model IEnumerable<Inmobiliaria_.Net_Core.Models.TipoInmueble>

@{
    ViewData["Title"] = "Lista de Tipos de Inmuebles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Tipos de Inmuebles</h2>
    <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
        <i class="fas fa-plus"></i> Nuevo Tipo
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Uso Permitido</th>
                            <th>Es Comercial</th>
                            <th>Estado</th>
                            <th width="200">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tipo in Model)
                        {
                            <tr>
                                <td>@tipo.Id</td>
                                <td>@tipo.Nombre</td>
                                <td>@(tipo.Descripcion ?? "Sin descripción")</td>
                                <td>
                                    <span class="badge @(tipo.UsoPermitido == "Comercial" ? "bg-info" : tipo.UsoPermitido == "Residencial" ? "bg-success" : "bg-warning")">
                                        @tipo.UsoPermitido
                                    </span>
                                </td>
                                <td>
                                    @if (tipo.EsComercial)
                                    {
                                        <span class="badge bg-primary">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    @if (tipo.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@tipo.Id" 
                                           class="btn btn-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@tipo.Id" 
                                           class="btn btn-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@tipo.Id" 
                                           class="btn btn-danger btn-sm" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay tipos de inmuebles registrados</h5>
                <p class="text-muted">Comienza creando el primer tipo de inmueble</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
                    <i class="fas fa-plus"></i> Crear Tipo
                </a>
            </div>
        }
    </div>
</div>
