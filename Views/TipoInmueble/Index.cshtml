@model IEnumerable<Inmobiliaria_.Net_Core.Models.TipoInmueble>

@{
    ViewData["Title"] = "Lista de Tipos de Inmuebles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Tipos de Inmuebles</h2>
    <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
        <i class="fas fa-plus"></i> Nuevo Tipo
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="tiposTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Id <svg xmlns="http://www.w3.org/2000/svg" class="filter-toggle" data-column="0" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="cursor:pointer;"><path fill-rule="evenodd" d="M1.5 5.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 .374.832l-6 7a.5.5 0 0 1-.748 0l-6-7A.5.5 0 0 1 1.5 5.5z"/></svg></th>
                            <th>Nombre <svg xmlns="http://www.w3.org/2000/svg" class="filter-toggle" data-column="1" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="cursor:pointer;"><path fill-rule="evenodd" d="M1.5 5.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 .374.832l-6 7a.5.5 0 0 1-.748 0l-6-7A.5.5 0 0 1 1.5 5.5z"/></svg></th>
                            <th>Descripción <svg xmlns="http://www.w3.org/2000/svg" class="filter-toggle" data-column="2" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="cursor:pointer;"><path fill-rule="evenodd" d="M1.5 5.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 .374.832l-6 7a.5.5 0 0 1-.748 0l-6-7A.5.5 0 0 1 1.5 5.5z"/></svg></th>
                            <th>Uso Permitido <svg xmlns="http://www.w3.org/2000/svg" class="filter-toggle" data-column="3" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="cursor:pointer;"><path fill-rule="evenodd" d="M1.5 5.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 .374.832l-6 7a.5.5 0 0 1-.748 0l-6-7A.5.5 0 0 1 1.5 5.5z"/></svg></th>
                            <th>Es Comercial <svg xmlns="http://www.w3.org/2000/svg" class="filter-toggle" data-column="4" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="cursor:pointer;"><path fill-rule="evenodd" d="M1.5 5.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 .374.832l-6 7a.5.5 0 0 1-.748 0l-6-7A.5.5 0 0 1 1.5 5.5z"/></svg></th>
                            <th>Estado <svg xmlns="http://www.w3.org/2000/svg" class="filter-toggle" data-column="5" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="cursor:pointer;"><path fill-rule="evenodd" d="M1.5 5.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 .374.832l-6 7a.5.5 0 0 1-.748 0l-6-7A.5.5 0 0 1 1.5 5.5z"/></svg></th>
                            <th width="200">Acciones</th>
                        </tr>
                        <tr id="filterRow" style="display: none;">
                            <td><input type="text" class="form-control filter-input" data-column="0" placeholder="Buscar ID"></td>
                            <td><input type="text" class="form-control filter-input" data-column="1" placeholder="Buscar Nombre"></td>
                            <td><input type="text" class="form-control filter-input" data-column="2" placeholder="Buscar Descripción"></td>
                            <td>
                                <select class="form-select filter-select" data-column="3">
                                    <option value="">Todos</option>
                                    <option value="Residencial">Residencial</option>
                                    <option value="Comercial">Comercial</option>
                                    <option value="Mixto">Mixto</option>
                                </select>
                            </td>
                            <td>
                                <select class="form-select filter-select" data-column="4">
                                    <option value="">Todos</option>
                                    <option value="Sí">Sí</option>
                                    <option value="No">No</option>
                                </select>
                            </td>
                            <td>
                                <select class="form-select filter-select" data-column="5">
                                    <option value="">Todos</option>
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo">Inactivo</option>
                                </select>
                            </td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        @foreach (var tipo in Model)
                        {
                            <tr>
                                <td>@tipo.Id</td>
                                <td>@tipo.Nombre</td>
                                <td>@(tipo.Descripcion ?? "Sin descripción")</td>
                                <td>
                                    <span class="badge @(tipo.UsoPermitido == "Comercial" ? "bg-info" : tipo.UsoPermitido == "Residencial" ? "bg-success" : "bg-warning")">
                                        @tipo.UsoPermitido
                                    </span>
                                </td>
                                <td>
                                    @if (tipo.EsComercial)
                                    {
                                        <span class="badge bg-primary">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    @if (tipo.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="table-actions">
                                        <a asp-action="Detalles" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-outline-custom btn-sm" title="Ver detalles del tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M247.31,124.76c-.35-.79-8.82-19.58-27.65-38.41C194.57,61.26,162.88,48,128,48S61.43,61.26,36.34,86.35C17.51,105.18,9,124,8.69,124.76a8,8,0,0,0,0,6.5c.35.79,8.82,19.57,27.65,38.4C61.43,194.74,93.12,208,128,208s66.57-13.26,91.66-38.34c18.83-18.83,27.3-37.61,27.65-38.4A8,8,0,0,0,247.31,124.76ZM128,192c-30.78,0-57.67-11.19-79.93-33.25A133.47,133.47,0,0,1,25,128,133.33,133.33,0,0,1,48.07,97.25C70.33,75.19,97.22,64,128,64s57.67,11.19,79.93,33.25A133.46,133.46,0,0,1,231.05,128C223.84,141.46,192.43,192,128,192Zm0-112a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32,32,0,0,1,128,160Z"/>
                                            </svg>
                                            <span class="ms-1">Ver</span>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-secondary-custom btn-sm" title="Editar tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
                                            </svg>
                                            <span class="ms-1">Editar</span>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-outline-custom btn-sm" title="Eliminar tipo de inmueble"
                                           style="color: #dc2626; border-color: #dc2626;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
                                            </svg>
                                            <span class="ms-1">Eliminar</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay tipos de inmuebles registrados</h5>
                <p class="text-muted">Comienza creando el primer tipo de inmueble</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
                    <i class="fas fa-plus"></i> Crear Tipo
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            console.log("Filtro JS cargado y ejecutándose");

            // Toggle filter row on caret click
            $('.filter-toggle').on('click', function() {
                $('#filterRow').toggle();
            });

            // Filter function
            function filterTable() {
                var filters = {};
                $('.filter-input').each(function() {
                    var col = $(this).data('column');
                    filters[col] = $(this).val().toLowerCase();
                });
                $('.filter-select').each(function() {
                    var col = $(this).data('column');
                    filters[col] = $(this).val();
                });

                $('#tableBody tr').each(function() {
                    var show = true;
                    $(this).find('td').each(function(index) {
                        if (filters[index] !== undefined && filters[index] !== '') {
                            var cellText = $(this).text().toLowerCase().trim();
                            if (index === 3) { // Uso Permitido
                                cellText = $(this).find('.badge').text().toLowerCase().trim();
                            } else if (index === 4) { // Es Comercial
                                cellText = $(this).find('.badge').text().toLowerCase().trim();
                            } else if (index === 5) { // Estado
                                cellText = $(this).find('.badge').text().toLowerCase().trim();
                            }
                            if (cellText.indexOf(filters[index]) === -1) {
                                show = false;
                            }
                        }
                    });
                    $(this).toggle(show);
                });
            }

            // Attach events
            $('.filter-input, .filter-select').on('input change', filterTable);
        });
    </script>
}
