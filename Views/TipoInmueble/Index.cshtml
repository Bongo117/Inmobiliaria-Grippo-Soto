@model IEnumerable<Inmobiliaria_.Net_Core.Models.TipoInmueble>

@{
    ViewData["Title"] = "Lista de Tipos de Inmuebles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Tipos de Inmuebles</h2>
    <div class="d-flex gap-2">
        <a asp-controller="Inmueble" asp-action="LibresEntreFechas" class="btn btn-outline-primary">
            <i class="fas fa-calendar-check"></i> Libres entre fechas
        </a>
        <a asp-action="Crear" class="btn-custom btn-primary-custom">
            <i class="fas fa-plus"></i> Nuevo Tipo
        </a>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="tiposTable">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>Id</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-light dropdown-toggle filter-dropdown" type="button" data-bs-toggle="dropdown" data-column="0" title="Filtrar por ID">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M3.5 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H4a.5.5 0 0 1-.5-.5v-1z"/>
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><input type="text" class="form-control form-control-sm filter-input" data-column="0" placeholder="Buscar ID" style="margin: 5px; width: calc(100% - 10px);"></li>
                                        </ul>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>Nombre</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-light dropdown-toggle filter-dropdown" type="button" data-bs-toggle="dropdown" data-column="1" title="Filtrar por Nombre">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M3.5 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H4a.5.5 0 0 1-.5-.5v-1z"/>
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><input type="text" class="form-control form-control-sm filter-input" data-column="1" placeholder="Buscar Nombre" style="margin: 5px; width: calc(100% - 10px);"></li>
                                        </ul>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>Descripción</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-light dropdown-toggle filter-dropdown" type="button" data-bs-toggle="dropdown" data-column="2" title="Filtrar por Descripción">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M3.5 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H4a.5.5 0 0 1-.5-.5v-1z"/>
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><input type="text" class="form-control form-control-sm filter-input" data-column="2" placeholder="Buscar Descripción" style="margin: 5px; width: calc(100% - 10px);"></li>
                                        </ul>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>Uso Permitido</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-light dropdown-toggle filter-dropdown" type="button" data-bs-toggle="dropdown" data-column="3" title="Filtrar por Uso Permitido">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M3.5 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H4a.5.5 0 0 1-.5-.5v-1z"/>
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item filter-option" href="#" data-value="" data-column="3">Todos</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="Residencial" data-column="3">Residencial</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="Comercial" data-column="3">Comercial</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="Mixto" data-column="3">Mixto</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>Es Comercial</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-light dropdown-toggle filter-dropdown" type="button" data-bs-toggle="dropdown" data-column="4" title="Filtrar por Es Comercial">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M3.5 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H4a.5.5 0 0 1-.5-.5v-1z"/>
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item filter-option" href="#" data-value="" data-column="4">Todos</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="Sí" data-column="4">Sí</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="No" data-column="4">No</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>Estado</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-light dropdown-toggle filter-dropdown" type="button" data-bs-toggle="dropdown" data-column="5" title="Filtrar por Estado">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M3.5 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H4a.5.5 0 0 1-.5-.5v-1z"/>
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item filter-option" href="#" data-value="" data-column="5">Todos</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="Activo" data-column="5">Activo</a></li>
                                            <li><a class="dropdown-item filter-option" href="#" data-value="Inactivo" data-column="5">Inactivo</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </th>
                            <th width="200">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        @foreach (var tipo in Model)
                        {
                            <tr>
                                <td>@tipo.Id</td>
                                <td>@tipo.Nombre</td>
                                <td>@(tipo.Descripcion ?? "Sin descripción")</td>
                                <td>
                                    <span class="badge @(tipo.UsoPermitido == "Comercial" ? "bg-info" : tipo.UsoPermitido == "Residencial" ? "bg-success" : "bg-warning")">
                                        @tipo.UsoPermitido
                                    </span>
                                </td>
                                <td>
                                    @if (tipo.EsComercial)
                                    {
                                        <span class="badge bg-primary">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    @if (tipo.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="table-actions">
                                        <a asp-action="Detalles" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-outline-custom btn-sm" title="Ver detalles del tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M247.31,124.76c-.35-.79-8.82-19.58-27.65-38.41C194.57,61.26,162.88,48,128,48S61.43,61.26,36.34,86.35C17.51,105.18,9,124,8.69,124.76a8,8,0,0,0,0,6.5c.35.79,8.82,19.57,27.65,38.4C61.43,194.74,93.12,208,128,208s66.57-13.26,91.66-38.34c18.83-18.83,27.3-37.61,27.65-38.4A8,8,0,0,0,247.31,124.76ZM128,192c-30.78,0-57.67-11.19-79.93-33.25A133.47,133.47,0,0,1,25,128,133.33,133.33,0,0,1,48.07,97.25C70.33,75.19,97.22,64,128,64s57.67,11.19,79.93,33.25A133.46,133.46,0,0,1,231.05,128C223.84,141.46,192.43,192,128,192Zm0-112a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32,32,0,0,1,128,160Z"/>
                                            </svg>
                                            <span class="ms-1">Ver</span>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-secondary-custom btn-sm" title="Editar tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
                                            </svg>
                                            <span class="ms-1">Editar</span>
                                        </a>
                                        @if (User.IsInRole("Administrador"))
                                        {
                                            <a asp-action="Eliminar" asp-route-id="@tipo.Id" 
                                               class="btn-custom btn-outline-custom btn-sm" title="Eliminar tipo de inmueble"
                                               style="color: #dc2626; border-color: #dc2626;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
                                            </svg>
                                            <span class="ms-1">Eliminar</span>
                                        </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay tipos de inmuebles registrados</h5>
                <p class="text-muted">Comienza creando el primer tipo de inmueble</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom me-2">
                    <i class="fas fa-plus"></i> Crear Tipo
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .filter-dropdown {
            border: 1px solid rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.1);
            color: white;
            transition: all 0.2s ease;
            padding: 4px 8px;
            border-radius: 4px;
        }
        
        .filter-dropdown:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
        }
        
        .filter-dropdown:focus {
            box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
        }
        
        .dropdown-menu {
            min-width: 200px;
            border: 1px solid #dee2e6;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 6px;
        }
        
        .dropdown-item {
            padding: 8px 16px;
            transition: all 0.2s ease;
        }
        
        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #495057;
        }
        
        .dropdown-item:active {
            background-color: #e9ecef;
        }
        
        .filter-input {
            border: 1px solid #ced4da;
            border-radius: 4px;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        
        .filter-input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        .table th {
            position: relative;
            vertical-align: middle;
        }
        
        .table th .d-flex {
            width: 100%;
        }
        
        .table th .dropdown {
            margin-left: auto;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            console.log("Filtro JS cargado y ejecutándose");

            // Store filter values
            var filters = {};

            // Filter function
            function filterTable() {
                $('#tableBody tr').each(function() {
                    var show = true;
                    $(this).find('td').each(function(index) {
                        if (filters[index] !== undefined && filters[index] !== '') {
                            var cellText = $(this).text().toLowerCase().trim();
                            if (index === 3) { // Uso Permitido
                                cellText = $(this).find('.badge').text().toLowerCase().trim();
                            } else if (index === 4) { // Es Comercial
                                cellText = $(this).find('.badge').text().toLowerCase().trim();
                            } else if (index === 5) { // Estado
                                cellText = $(this).find('.badge').text().toLowerCase().trim();
                            }
                            if (cellText.indexOf(filters[index]) === -1) {
                                show = false;
                            }
                        }
                    });
                    $(this).toggle(show);
                });
            }

            // Handle text input filters
            $('.filter-input').on('input', function() {
                var col = $(this).data('column');
                filters[col] = $(this).val().toLowerCase();
                filterTable();
            });

            // Handle dropdown option filters
            $('.filter-option').on('click', function(e) {
                e.preventDefault();
                var col = $(this).data('column');
                var value = $(this).data('value');
                filters[col] = value;
                
                // Update button text to show selected option
                var button = $(this).closest('.dropdown').find('.filter-dropdown');
                var buttonText = $(this).text();
                if (value === '') {
                    button.attr('title', 'Filtrar por ' + button.attr('title').split(' ').slice(2).join(' '));
                } else {
                    button.attr('title', 'Filtro: ' + buttonText);
                }
                
                // Close dropdown
                $(this).closest('.dropdown').removeClass('show');
                $(this).closest('.dropdown').find('.dropdown-menu').removeClass('show');
                
                filterTable();
            });

            // Prevent dropdown from closing when clicking inside
            $('.dropdown-menu').on('click', function(e) {
                e.stopPropagation();
            });

            // Close dropdown when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown').removeClass('show');
                    $('.dropdown-menu').removeClass('show');
                }
            });
        });
    </script>
}
