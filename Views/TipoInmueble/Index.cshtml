@model IEnumerable<Inmobiliaria_.Net_Core.Models.TipoInmueble>

@{
    ViewData["Title"] = "Lista de Tipos de Inmuebles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Tipos de Inmuebles</h2>
    <div class="d-flex gap-2">
        <a asp-controller="Inmueble" asp-action="LibresEntreFechas" class="btn btn-outline-primary">
            <i class="fas fa-calendar-check"></i> Libres entre fechas
        </a>
        <a asp-action="Crear" class="btn-custom btn-primary-custom">
            <i class="fas fa-plus"></i> Nuevo Tipo
        </a>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row g-3 align-items-end">
                    <div class="col-md-2"><label>ID</label><input type="text" name="id" value="@ViewBag.FiltroId" class="form-control" /></div>
                    <div class="col-md-3"><label>Nombre</label><input type="text" name="nombre" value="@ViewBag.FiltroNombre" class="form-control" /></div>
                    <div class="col-md-2">
                        <label>Uso</label>
                        <select name="uso" class="form-select" asp-items='new SelectList(new[] { "Residencial", "Comercial", "Mixto" }, (string)ViewBag.FiltroUso)'><option value="">Todos</option></select>
                    </div>
                    <div class="col-md-2">
                        <label>Estado</label>
                        <select name="estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="true" selected="@(ViewBag.FiltroEstado as bool? == true)">Activo</option>
                            <option value="false" selected="@(ViewBag.FiltroEstado as bool? == false)">Inactivo</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Filtrar</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-eraser"></i> Limpiar</a>
                    </div>
                </div>
            </form>
            <div class="table-shadcn-container">
                <table class="table-shadcn">
                    <caption class="table-shadcn-caption">
                        Lista de tipos de inmuebles registrados en el sistema.
                    </caption>
                    <thead class="table-shadcn-header">
                        <tr class="table-shadcn-header-row">
                            <th class="table-shadcn-head" style="width: 80px;">Id</th>
                            <th class="table-shadcn-head">Nombre</th>
                            <th class="table-shadcn-head">Descripción</th>
                            <th class="table-shadcn-head" style="width: 140px;">Uso Permitido</th>
                            <th class="table-shadcn-head" style="width: 120px;">Es Comercial</th>
                            <th class="table-shadcn-head" style="width: 100px;">Estado</th>
                            <th class="table-shadcn-head text-center" style="width: 200px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="table-shadcn-body">
                        @foreach (var tipo in Model)
                        {
                            <tr class="table-shadcn-row">
                                <td class="table-shadcn-cell font-medium">@tipo.Id</td>
                                <td class="table-shadcn-cell">@tipo.Nombre</td>
                                <td class="table-shadcn-cell">@(tipo.Descripcion ?? "Sin descripción")</td>
                                <td class="table-shadcn-cell">
                                    <span class="badge @(tipo.UsoPermitido == "Comercial" ? "bg-info" : tipo.UsoPermitido == "Residencial" ? "bg-success" : "bg-warning")">
                                        @tipo.UsoPermitido
                                    </span>
                                </td>
                                <td class="table-shadcn-cell">
                                    @if (tipo.EsComercial)
                                    {
                                        <span class="badge bg-primary">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td class="table-shadcn-cell">
                                    @if (tipo.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td class="table-shadcn-cell">
                                    <div class="table-actions">
                                        <a asp-action="Detalles" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-outline-custom btn-sm" title="Ver detalles del tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M247.31,124.76c-.35-.79-8.82-19.58-27.65-38.41C194.57,61.26,162.88,48,128,48S61.43,61.26,36.34,86.35C17.51,105.18,9,124,8.69,124.76a8,8,0,0,0,0,6.5c.35.79,8.82,19.57,27.65,38.4C61.43,194.74,93.12,208,128,208s66.57-13.26,91.66-38.34c18.83-18.83,27.3-37.61,27.65-38.4A8,8,0,0,0,247.31,124.76ZM128,192c-30.78,0-57.67-11.19-79.93-33.25A133.47,133.47,0,0,1,25,128,133.33,133.33,0,0,1,48.07,97.25C70.33,75.19,97.22,64,128,64s57.67,11.19,79.93,33.25A133.46,133.46,0,0,1,231.05,128C223.84,141.46,192.43,192,128,192Zm0-112a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32,32,0,0,1,128,160Z"/>
                                            </svg>
                                            <span class="ms-1">Ver</span>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@tipo.Id" 
                                           class="btn-custom btn-secondary-custom btn-sm" title="Editar tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M227.31,73.37,182.63,28.69a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31l83.67-83.66,3.48,13.9L173.27,216H216a16,16,0,0,0,16-16V163.31A15.86,15.86,0,0,0,227.31,152ZM51.31,188,68,171.31,84.69,188Zm48,0L120,171.31,136.69,188Zm48-48L168,123.31,184.69,140Zm16-57.37L147.32,64l16.68-16.69L180.69,66.34Z"/>
                                            </svg>
                                            <span class="ms-1">Editar</span>
                                        </a>
                                        @if (User.IsInRole("Administrador"))
                                        {
                                            <a asp-action="Eliminar" asp-route-id="@tipo.Id" 
                                               class="btn-custom btn-outline-danger-custom btn-sm" title="Eliminar tipo de inmueble">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                                <path d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"/>
                                            </svg>
                                            <span class="ms-1">Eliminar</span>
                                        </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="table-empty-state">
                <div class="table-empty-state-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 256 256">
                        <path d="M240,128H216V40a16,16,0,0,0-16-16H56A16,16,0,0,0,40,40v88H16a8,8,0,0,0,0,16H40v88a16,16,0,0,0,16,16H200a16,16,0,0,0,16-16V144h24a8,8,0,0,0,0-16ZM56,40H200v88H56Zm144,176H56V144H200v72Z"/>
                    </svg>
                </div>
                <h5>No hay tipos de inmuebles registrados</h5>
                <p>Comienza creando el primer tipo de inmueble para gestionar las propiedades</p>
                <a asp-action="Crear" class="btn-custom btn-primary-custom">
                    <span class="sidebar-icon me-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M224,128a8,8,0,0,1-8,8H136v80a8,8,0,0,1-16,0V136H40a8,8,0,0,1,0-16h80V40a8,8,0,0,1,16,0v80h80A8,8,0,0,1,224,128Z"/>
                        </svg>
                    </span>
                    Crear Tipo
                </a>
            </div>
        }
    </div>
</div>
