@model Inmobiliaria_.Net_Core.Models.TipoInmueble

@{
    ViewData["Title"] = "Detalles del Tipo de Inmueble";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Detalles del Tipo de Inmueble</h2>
    <div>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn-custom btn-warning-custom me-2">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn-custom btn-secondary-custom">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="card-title text-primary">Información General</h5>
                
                <div class="mb-3">
                    <label class="form-label text-muted">ID:</label>
                    <p class="form-control-plaintext">@Model.Id</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Nombre:</label>
                    <p class="form-control-plaintext fw-bold">@Model.Nombre</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Uso Permitido:</label>
                    <p class="form-control-plaintext">
                        <span class="badge @(Model.UsoPermitido == "Comercial" ? "bg-info" : Model.UsoPermitido == "Residencial" ? "bg-success" : "bg-warning") fs-6">
                            @Model.UsoPermitido
                        </span>
                    </p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Es Comercial:</label>
                    <p class="form-control-plaintext">
                        @if (Model.EsComercial)
                        {
                            <span class="badge bg-primary fs-6">
                                <i class="fas fa-check"></i> Sí
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">
                                <i class="fas fa-times"></i> No
                            </span>
                        }
                    </p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Estado:</label>
                    <p class="form-control-plaintext">
                        @if (Model.Estado)
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check-circle"></i> Activo
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="fas fa-times-circle"></i> Inactivo
                            </span>
                        }
                    </p>
                </div>
            </div>
            
            <div class="col-md-6">
                <h5 class="card-title text-primary">Descripción</h5>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Descripción:</label>
                    @if (!string.IsNullOrEmpty(Model.Descripcion))
                    {
                        <p class="form-control-plaintext border rounded p-3 bg-light">
                            @Model.Descripcion
                        </p>
                    }
                    else
                    {
                        <p class="form-control-plaintext text-muted fst-italic">
                            Sin descripción
                        </p>
                    }
                </div>
                
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Información:</strong> Este tipo de inmueble puede ser asignado a propiedades que coincidan con las características definidas.
                </div>
                
                @if (Model.EsComercial)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-store"></i>
                        <strong>Uso Comercial:</strong> Este tipo está marcado como comercial, ideal para negocios y actividades comerciales.
                    </div>
                }
            </div>
        </div>
        
        <div class="d-flex gap-2 mt-4">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn-custom btn-warning-custom">
                <i class="fas fa-edit"></i> Editar Tipo
            </a>
            <a asp-action="Index" class="btn-custom btn-secondary-custom">
                <i class="fas fa-list"></i> Ver Todos los Tipos
            </a>
        </div>
    </div>
</div>
