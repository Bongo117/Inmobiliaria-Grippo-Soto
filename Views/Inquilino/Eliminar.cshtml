@model Inmobiliaria_.Net_Core.Models.Inquilino

@{
    ViewData["Title"] = "Eliminar Inquilino";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger">Eliminar Inquilino</h2>
</div>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> ¿Está seguro que desea eliminar este inquilino?</h4>
    <p>Esta acción marcará al inquilino como inactivo. Los datos no se eliminarán permanentemente.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-user"></i> Información del Inquilino a Eliminar</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID:</label>
                            <p class="form-control-plaintext">@Model.Id</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">DNI:</label>
                            <p class="form-control-plaintext">@Model.Dni</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre:</label>
                            <p class="form-control-plaintext">@Model.Nombre</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Apellido:</label>
                            <p class="form-control-plaintext">@Model.Apellido</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email:</label>
                    <p class="form-control-plaintext">@(Model.Email ?? "No especificado")</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Teléfono:</label>
                            <p class="form-control-plaintext">@(Model.Telefono ?? "No especificado")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Domicilio:</label>
                            <p class="form-control-plaintext">@(Model.Domicilio ?? "No especificado")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Eliminar" method="post" style="display: inline;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está completamente seguro que desea eliminar este inquilino?')">
            <i class="fas fa-trash"></i> Confirmar Eliminación
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Cancelar
    </a>
    <a asp-action="Detalles" asp-route-id="@Model.Id" class="btn btn-info">
        <i class="fas fa-eye"></i> Ver Detalles
    </a>
</div>
