@model Inmobiliaria_.Net_Core.Models.Inquilino

@{
    ViewData["Title"] = "Detalles del Inquilino";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Detalles del Inquilino</h2>
    <div>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-user"></i> Información Personal</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID:</label>
                            <p class="form-control-plaintext">@Model.Id</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">DNI:</label>
                            <p class="form-control-plaintext">@Model.Dni</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre:</label>
                            <p class="form-control-plaintext">@Model.Nombre</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Apellido:</label>
                            <p class="form-control-plaintext">@Model.Apellido</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre Completo:</label>
                    <p class="form-control-plaintext">@Model.Apellido, @Model.Nombre</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-address-book"></i> Información de Contacto</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email:</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Teléfono:</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <a href="tel:@Model.Telefono">@Model.Telefono</a>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Domicilio:</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrEmpty(Model.Domicilio))
                        {
                            @Model.Domicilio
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Estado:</label>
                    <p class="form-control-plaintext">
                        @if (Model.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Eliminar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver a la Lista
    </a>
</div>
