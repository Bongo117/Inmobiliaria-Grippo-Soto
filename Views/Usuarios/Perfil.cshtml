@model Inmobiliaria_.Net_Core.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}
<div class="container py-4">
    <h2>Mi Perfil</h2>
    
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Foto de Perfil</label>
            <div class="d-flex align-items-center gap-3">
                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                {
                    <img src="@Model.AvatarUrl" alt="Avatar actual" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" />
                }
                else
                {
                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 24px;">
                        @(Model.Nombre?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                }
                <div>
                    <input type="file" name="avatarFile" accept="image/*" class="form-control" />
                    <small class="text-muted">Selecciona una imagen desde tu computadora</small>
                    @if (ViewData.ModelState["avatarFile"]?.Errors?.Count > 0)
                    {
                        <div class="text-danger small">
                            @ViewData.ModelState["avatarFile"]?.Errors?[0]?.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
    <div class="mt-4">
        <a asp-action="CambiarClave" class="btn btn-outline-secondary">Cambiar Contrase√±a</a>
    </div>
</div>


