@model List<Inmobiliaria_Grippo_Soto.Controllers.UsuarioConRolesViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Gestión de Usuarios</h2>
    <a asp-action="Crear" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Usuario
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5>No hay usuarios registrados</h5>
                <p class="text-muted">Comience creando el primer usuario del sistema.</p>
                <a asp-action="Crear" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Crear Primer Usuario
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Foto</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Fecha Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuarioConRoles in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(usuarioConRoles.Usuario.FotoPerfil))
                                    {
                                        <img src="@usuarioConRoles.Usuario.FotoPerfil" alt="Foto" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light border rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <strong>@usuarioConRoles.Usuario.NombreCompleto</strong>
                                        @if (string.IsNullOrEmpty(usuarioConRoles.Usuario.Nombre) && string.IsNullOrEmpty(usuarioConRoles.Usuario.Apellido))
                                        {
                                            <span class="text-muted">(Sin nombre)</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @usuarioConRoles.Usuario.Email
                                    @if (usuarioConRoles.Usuario.EmailConfirmed)
                                    {
                                        <i class="fas fa-check-circle text-success" title="Email confirmado"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-exclamation-circle text-warning" title="Email no confirmado"></i>
                                    }
                                </td>
                                <td>@(usuarioConRoles.Usuario.PhoneNumber ?? "N/A")</td>
                                <td>
                                    @if (usuarioConRoles.Roles.Any())
                                    {
                                        @foreach (var rol in usuarioConRoles.Roles)
                                        {
                                            <span class="badge bg-@(rol == "Administrador" ? "danger" : "primary")">@rol</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Sin rol</span>
                                    }
                                </td>
                                <td>
                                    @if (usuarioConRoles.Usuario.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>@usuarioConRoles.Usuario.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@usuarioConRoles.Usuario.Id" class="btn btn-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@usuarioConRoles.Usuario.Id" class="btn btn-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@usuarioConRoles.Usuario.Id" class="btn btn-danger btn-sm" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
