@model Inmobiliaria_Grippo_Soto.Controllers.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    var roles = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
}

<h2><i class="fas fa-user-edit"></i> Editar Usuario</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Editar Datos del Usuario</h4>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control">
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Apellido" class="form-label">Apellido</label>
                                <input asp-for="Apellido" class="form-control">
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" readonly style="background-color: #f8f9fa;">
                        <small class="form-text text-muted">El email no se puede modificar.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Telefono" class="form-label">Tel√©fono</label>
                        <input asp-for="Telefono" class="form-control">
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RolSeleccionado" class="form-label">Rol</label>
                        <select asp-for="RolSeleccionado" class="form-select">
                            <option value="">Sin rol</option>
                            @if (roles != null)
                            {
                                @foreach (var rol in roles)
                                {
                                    <option value="@rol.Name" selected="@(rol.Name == Model.RolActual)">@rol.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="RolSeleccionado" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="EmailConfirmed" type="checkbox" class="form-check-input">
                        <label asp-for="EmailConfirmed" class="form-check-label">
                            Email confirmado
                        </label>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                        <a asp-action="Detalles" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Ver Detalles
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
